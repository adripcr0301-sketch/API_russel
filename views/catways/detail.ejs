<div class="container">
  <h1>Catway n°<%= catway.catwayNumber %></h1>

  <div class="card">
    <p><strong>Numéro :</strong> <%= catway.catwayNumber %></p>
    <p><strong>Type :</strong> <%= catway.catwayType %></p>
    <p><strong>État :</strong> <%= catway.catwayState %></p>
  </div>

  <div class="card">
    <h2>Modifier l'état</h2>
    <form action="/catways/<%= catway.catwayNumber %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="catwayState">Nouvel état</label>
        <textarea id="catwayState" name="catwayState" rows="3"><%= catway.catwayState %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
  </div>

  <a href="/catways" class="btn btn-primary">Retour à la liste</a>
  <a href="/catways/<%= catway.catwayNumber %>/reservations" class="btn btn-success">Voir les réservations</a>
</div>
