<div class="container">
  <h1>Tableau de bord</h1>

  <div class="info-box">
    <div class="info-item">
      <h3>Utilisateur connecté</h3>
      <p><%= user.username %></p>
    </div>
    <div class="info-item">
      <h3>Email</h3>
      <p><%= user.email %></p>
    </div>
    <div class="info-item">
      <h3>Date du jour</h3>
      <p><%= date %></p>
    </div>
  </div>

  <div class="card">
    <h2>Réservations en cours</h2>
    <% if (reservations.length === 0) { %>
      <p>Aucune réservation en cours.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Catway</th>
            <th>Client</th>
            <th>Bateau</th>
            <th>Début</th>
            <th>Fin</th>
          </tr>
        </thead>
        <tbody>
          <% reservations.forEach(r => { %>
            <tr>
              <td><%= r.catwayNumber %></td>
              <td><%= r.clientName %></td>
              <td><%= r.boatName %></td>
              <td><%= new Date(r.startDate).toLocaleDateString('fr-FR') %></td>
              <td><%= new Date(r.endDate).toLocaleDateString('fr-FR') %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>
