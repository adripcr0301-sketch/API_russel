<div class="container">
  <h1>Détail de la réservation</h1>

  <div class="card">
    <p><strong>Catway :</strong> n°<%= reservation.catwayNumber %></p>
    <p><strong>Client :</strong> <%= reservation.clientName %></p>
    <p><strong>Bateau :</strong> <%= reservation.boatName %></p>
    <p><strong>Début :</strong> <%= new Date(reservation.startDate).toLocaleDateString('fr-FR') %></p>
    <p><strong>Fin :</strong> <%= new Date(reservation.endDate).toLocaleDateString('fr-FR') %></p>
  </div>

  <div class="card">
    <h2>Modifier la réservation</h2>
    <form action="/catways/<%= reservation.catwayNumber %>/reservations/<%= reservation._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="clientName">Client</label>
        <input type="text" id="clientName" name="clientName" value="<%= reservation.clientName %>" required>
      </div>
      <div class="form-group">
        <label for="boatName">Bateau</label>
        <input type="text" id="boatName" name="boatName" value="<%= reservation.boatName %>" required>
      </div>
      <div class="form-group">
        <label for="startDate">Date de début</label>
        <input type="date" id="startDate" name="startDate" value="<%= new Date(reservation.startDate).toISOString().split('T')[0] %>" required>
      </div>
      <div class="form-group">
        <label for="endDate">Date de fin</label>
        <input type="date" id="endDate" name="endDate" value="<%= new Date(reservation.endDate).toISOString().split('T')[0] %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
  </div>

  <a href="/catways/<%= reservation.catwayNumber %>/reservations" class="btn btn-primary">Retour aux réservations</a>
</div>
